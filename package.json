{
  "name": "ultimate.bot",
  "description": "",
  "version": "0.0.1",
  "scripts": {
    "//BUILD": "-----------------------------------------------------------------------------------",
    "clean": "npm run build:clean",
    "build": "tsc",
    "build:clean": "rm -rf build",
    "//LINTING / FORMATTING": "--------------------------------------------------------------------",
    "lint": "npx eslint . --ext .ts --fix ",
    "prettier-format": "npx prettier src/**/*.ts --write",
    "prepare": "is-ci || husky install",
    "//RUN LOCALLY": "------------------------------------------------------------------------------",
    "start:dev": "npx nodemon src/app.ts",
    "//TEST": "------------------------------------------------------------------------------------",
    "test": "jest  --coverage --config jest-config.json --passWithNoTests",
    "//MONGO MIGRATION/SEEDING": "-------------------------------------------------------------",
    "run-migration": "npx ts-node up add_collections --migrations-dir src/services/mongo/migrations"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^7.4.0",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/jest": "^27.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.3.1",
    "migrate-mongoose": "^0.1.0",
    "nodemon": "^2.0.19",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "ip": "^1.1.5",
    "moment": "^2.29.1",
    "mongoose": "^6.5.1",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  }
}
