{
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "roots": ["<rootDir>", "<rootDir>/src"],
  "testTimeout": 5000,
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json",
      "diagnostics": true
    }
  },
  "testMatch": ["**/*.test.+(ts|js)"]
}
